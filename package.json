{
	"name": "obsidian-plugins-monorepo",
	"version": "1.0.0",
	"description": "Monorepo for Obsidian plugins and shared libraries",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "npx nx run-many -t build",
		"build:libs": "npx nx run-many -t build --projects=tag:type:lib",
		"build:apps": "npx nx run-many -t build --projects=tag:type:app",
		"test": "npx nx run-many -t test",
		"test:watch": "npx nx run-many -t test:watch --parallel=4",
		"typecheck": "npx nx run-many -t typecheck",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"clean": "npx nx run-many -t clean && npx nx reset",
		"graph": "npx nx graph",
		"affected:build": "npx nx affected -t build",
		"affected:test": "npx nx affected -t test",
		"affected:lint": "npx nx affected -t lint",
		"publish:common-plugin:patch": "pnpm --filter @real1ty-obsidian-plugins/common-plugin patch-release",
		"publish:common-plugin:minor": "pnpm --filter @real1ty-obsidian-plugins/common-plugin minor-release",
		"publish:common-plugin:major": "pnpm --filter @real1ty-obsidian-plugins/common-plugin major-release",
		"publish:utils:patch": "pnpm --filter @real1ty-obsidian-plugins/utils patch-release",
		"publish:utils:minor": "pnpm --filter @real1ty-obsidian-plugins/utils minor-release",
		"publish:utils:major": "pnpm --filter @real1ty-obsidian-plugins/utils major-release",
		"publish:libs:patch": "pnpm run publish:common-plugin:patch && pnpm run publish:utils:patch",
		"publish:libs:minor": "pnpm run publish:common-plugin:minor && pnpm run publish:utils:minor",
		"publish:libs:major": "pnpm run publish:common-plugin:major && pnpm run publish:utils:major"
	},
	"keywords": [
		"obsidian",
		"plugins",
		"monorepo"
	],
	"author": "Real1ty",
	"license": "MIT",
	"packageManager": "pnpm@9.0.0",
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@nx/esbuild": "^21.4.1",
		"@nx/js": "^21.4.1",
		"@nx/workspace": "^21.4.1",
		"@types/node": "^24.3.0",
		"nx": "21.4.1",
		"typescript": "5.9.2",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^2.0.5"
	}
}
